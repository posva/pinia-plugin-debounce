{
  "name": "@pinia/plugin-debounce",
  "version": "0.1.0",
  "description": "Debounce any action in your pinia üçç store!",
  "publishConfig": {
    "access": "public"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "unpkg": "dist/index.global.js",
  "jsdelivr": "dist/index.global.js",
  "types": "./dist/index.d.ts",
  "exports": {
    "require": "./dist/index.js",
    "import": "./dist/index.mjs"
  },
  "sideEffects": false,
  "funding": "https://github.com/sponsors/posva",
  "author": {
    "name": "Eduardo San Martin Morote",
    "email": "posva13@gmail.com"
  },
  "scripts": {
    "dev": "vitest",
    "release": "node scripts/release.mjs",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 1",
    "test": "pnpm run test:cov && pnpm run test:types",
    "lint": "prettier -c --parser typescript \"src/**/*.[jt]s?(x)\"",
    "lint:fix": "yarn run lint --write",
    "test:types": "tsc --build ./tsconfig.json",
    "test:cov": "vitest run --coverage",
    "build": "pnpm build:esm & pnpm build:iife & wait",
    "build:esm": "tsup src/index.ts --format esm,cjs --dts --target es2020",
    "build:iife": "tsup src/index.ts --format iife --minify --global-name PiniaDebounce --target es2020"
  },
  "files": [
    "dist/*.js",
    "dist/*.mjs",
    "dist/*.d.ts",
    "LICENSE",
    "README.md"
  ],
  "keywords": [
    "pinia",
    "plugin",
    "debounce",
    "example",
    "starter",
    "boilerplate"
  ],
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^16.11.48",
    "c8": "^7.12.0",
    "chalk": "^5.0.1",
    "conventional-changelog-cli": "^2.2.2",
    "enquirer": "^2.3.6",
    "esbuild": "^0.15.3",
    "esbuild-register": "^3.3.3",
    "execa": "^6.1.0",
    "expect": "^28.1.3",
    "lint-staged": "^13.0.3",
    "minimist": "^1.2.6",
    "pinia": "^2.0.18",
    "prettier": "^2.7.1",
    "semver": "^7.3.7",
    "source-map-support": "^0.5.21",
    "ts-debounce": "^4.0.0",
    "ts-node": "^10.9.1",
    "tsup": "^6.2.2",
    "typescript": "^4.7.4",
    "vitest": "^0.21.1",
    "vue": "^3.2.37",
    "yorkie": "^2.0.0"
  },
  "gitHooks": {
    "pre-commit": "lint-staged",
    "commit-msg": "node scripts/verifyCommit.js"
  },
  "lint-staged": {
    "*.?(m)js": [
      "prettier --write"
    ],
    "*.ts?(x)": [
      "prettier --parser=typescript --write"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/posva/pinia-plugin-debounce.git"
  },
  "bugs": {
    "url": "https://github.com/posva/pinia-plugin-debounce/issues"
  },
  "homepage": "https://github.com/posva/pinia-plugin-debounce#readme"
}
