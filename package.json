{
  "name": "@pinia/plugin-debounce",
  "version": "0.0.2",
  "description": "Debounce any action in your pinia üçç store!",
  "publishConfig": {
    "access": "public"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "unpkg": "dist/index.global.js",
  "jsdelivr": "dist/index.global.js",
  "types": "./dist/index.d.ts",
  "exports": {
    "require": "./dist/index.js",
    "import": "./dist/index.mjs"
  },
  "sideEffects": false,
  "funding": "https://github.com/sponsors/posva",
  "author": {
    "name": "Eduardo San Martin Morote",
    "email": "posva13@gmail.com"
  },
  "scripts": {
    "dev": "mocha -w",
    "release": "node scripts/release.mjs",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 1",
    "test": "pnpm run test:cov",
    "lint": "prettier -c --parser typescript \"src/**/*.[jt]s?(x)\"",
    "lint:fix": "yarn run lint --write",
    "test:types": "tsc --build ./tsconfig.json",
    "test:cov": "nyc mocha",
    "build": "pnpm build:esm & pnpm build:iife & wait",
    "build:esm": "tsup src/index.ts --format esm,cjs --dts --target es2020",
    "build:iife": "tsup src/index.ts --format iife --minify --global-name PiniaDebounce --target es2020"
  },
  "files": [
    "dist/*.js",
    "dist/*.mjs",
    "dist/*.d.ts",
    "LICENSE",
    "README.md"
  ],
  "keywords": [
    "pinia",
    "plugin",
    "debounce",
    "example",
    "starter",
    "boilerplate"
  ],
  "license": "MIT",
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.1",
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.7.2",
    "chalk": "^4.1.2",
    "codecov": "^3.8.3",
    "conventional-changelog-cli": "^2.1.1",
    "enquirer": "^2.3.6",
    "esbuild-register": "^3.0.0",
    "execa": "^5.1.1",
    "expect": "^27.2.2",
    "lint-staged": "^11.1.2",
    "minimist": "^1.2.5",
    "mocha": "^9.1.2",
    "nyc": "^15.1.0",
    "pinia": "^2.0.0-rc.9",
    "prettier": "^2.4.1",
    "semver": "^7.3.5",
    "source-map-support": "^0.5.20",
    "ts-debounce": "^3.0.0",
    "ts-node": "^10.2.1",
    "tsup": "^4.14.0",
    "typescript": "^4.4.3",
    "vue": "^3.2.19",
    "yorkie": "^2.0.0"
  },
  "gitHooks": {
    "pre-commit": "lint-staged",
    "commit-msg": "node scripts/verifyCommit.js"
  },
  "lint-staged": {
    "*.?(m)js": [
      "prettier --write"
    ],
    "*.ts?(x)": [
      "prettier --parser=typescript --write"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/posva/pinia-plugin-debounce.git"
  },
  "bugs": {
    "url": "https://github.com/posva/pinia-plugin-debounce/issues"
  },
  "homepage": "https://github.com/posva/pinia-plugin-debounce#readme"
}
